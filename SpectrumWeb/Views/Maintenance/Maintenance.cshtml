                    buildButton("/Parts/M21MaintHistory", "Maintenance History", 220) +
                    buildButton("/Parts/M22PartsUtilization", "Parts Utilization", 220) +
                    buildButton("/Parts/M23ReliabilityMonitoring", "Reliability Monitoring", 220)
