<script>

var topTabList = null;

var secondLevelTabList = null;

$(document).ready(function() {
    topTabList = document.getElementsByClassName("topTab");
    });


function loadPage(e, url) {
    setLevel2TabState(e);
    window.open(url, 'maintenance');
}

function buildButton(url, label, width=184){
    return "<button class='level2Tab' style='width:'" + width + "px' onclick='loadPage(this, \"" + url + "\")'>" + label + "</button>\n";
}

function setLevel1TabState(e)
{
    $(".level1Tab").removeClass("level1TabActive");
    $(e).addClass("level1TabActive");
}

function setLevel2TabState(e)
{
    $(".level2Tab").removeClass("level2TabActive");
    $(e).addClass("level2TabActive");
}

function basicElementMenu(e) {

    setLevel1TabState(e);

    var menuText =  buildButton("/AC/Aircraft", "Aircraft") +
                    buildButton("/Warranties/Warranties", "Guarantees/Warranties") +
                    buildButton("/Squawks/Squawks", "Squawks") +
                    buildButton("/ADandSB/ADandSB", "AD, SB and FCD") +
                    buildButton("/TaskCards/TaskCards", "Task Cards") +
                    buildButton("/Vendors/Vendors", "Vendors") +
                    buildButton("/Warehouses/Warehouses", "Warehouses")
                    ;

    document.getElementById('TabLevel2').innerHTML = menuText;
    document.getElementById('main_header').innerHTML = "MAINTENANCE"
}

